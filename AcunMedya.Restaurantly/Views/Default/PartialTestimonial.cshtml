@model List<AcunMedya.Restaurantly.Entities.Testimonial>

<section id="testimonials" class="testimonials section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Referanslarımız</h2>
            <p>Bizim Hakkımızda Ne Söylüyorlar?</p>
        </div>

       
        <div class="testimonials-slider swiper-container" style="max-height: 350px; overflow: hidden;">


            <div class="swiper-wrapper">
                @foreach (var x in Model)
                {
                    <div class="swiper-slide">

                        <div class="testimonial-item">

                            <p>
                                <i class="bx bxs-quote-alt-left quote-icon-left"></i>
                                @x.Description
                                <i class="bx bxs-quote-alt-right quote-icon-right"></i>
                            </p>
                            <img src="@x.ImageUrl" class="testimonial-img" alt="">
                            <h3>@x.Name</h3>
                            <h4>@x.Title</h4>

                        </div>
                    </div>
                }
            </div>

            <div class="swiper-pagination" style="position: absolute; bottom: 10px; left: 50%; transform: translateX(-50%); z-index: 10;"></div>

        </div>

    </div>
</section><!-- End Testimonials Section -->
