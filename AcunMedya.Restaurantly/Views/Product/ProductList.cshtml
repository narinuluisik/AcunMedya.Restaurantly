@model List<AcunMedya.Restaurantly.Entities.Product>

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}


<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <form method="get">
        <div class="form-group">
            <input type="text" name="searchText" placeholder=" Aranacak Kelime" class="form-control" />
       <button class="btn btn-dark gradient-9">Ara</button>
        </div>

    </form>
    <div class="row">

        <!-- /# column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Ürün Listesi </h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Yemek Adı</th>
                                    <th>Açıklama</th>
                                    <th>Fiyat</th>
                                    <th>Kategori</th>
                                    <th>Resim</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var x in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@x.Name</td>
                                        <td>@x.Description</td>
                                        <td>@x.Price</td>
                                        <td>@x.Category.CategoryName</td>
                                        <td><img src ="@x.ImageUrl" style=" width:100px; height:100px" /></td>

                                        <td><a href="/Product/ProductDelete/@x.ProductId" class="btn btn-danger">
                                                <i class="fa fa-close color-muted m-r-5"></i>
    Sil
</a></td>
                                       
                                        <td><a href="/Product/ProductEdit/@x.ProductId" class="btn btn-info">Güncelle</a></td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                        <td><a href="/Category/CategoryCreate/" class="btn btn-success">Kategori Ekle</a></td>
                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>
