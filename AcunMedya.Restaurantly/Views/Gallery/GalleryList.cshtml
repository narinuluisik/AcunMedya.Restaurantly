
@model List<AcunMedya.Restaurantly.Entities.Gallery>

@{
    ViewBag.Title = "GalleryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}





<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">

        <!-- /# column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Galeri  </h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık</th>

                                    <th>Resim</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var x in Model)
                                {

                                    <tr>

                                        <td>@x.GalleryId</td>
                                        <td>@x.Title</td>



                                        <td><img src="@x.ImageUrl" style=" width:200px; height:200px" /></td>

                                        <td>
                                            <a href="/Gallery/GalleryDelete/@x.GalleryId" class="btn btn-danger">
                                                <i class="fa fa-close color-muted m-r-5"></i>
                                                Sil
                                            </a>
                                        </td>

                                        <td><a href="/Gallery/GalleryEdit/@x.GalleryId" class="btn btn-info">Güncelle</a></td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                        <td><a href="/Gallery/GalleryCreate/" class="btn btn-success">Resim Ekle</a></td>
                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>
